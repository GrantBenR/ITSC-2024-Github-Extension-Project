{
    "manifest_version": 3,
    "name": "Github Issues Timer",
    "version": "1.0.0",
    "description": "An extension for github issues that adds a timer that logs to issue comments. Firefox version",
    "author": "ITSC Interns",
    "icons": {
      "48": "Icons/icon.png",
      "128": "Icons/icon.png"
    },
    "action": {
      "default_popup": "Popup/index.html"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
          "js": ["Popup/extension.js"],
          "css": ["Popup/extension.css"],
          "run_at": "document_end",
          "matches": ["https://github.com/*/*/issues/*"]
      }]
  }