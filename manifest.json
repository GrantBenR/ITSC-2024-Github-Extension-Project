{
  "manifest_version": 3,
  "name": "Github Issues Timer",
  "version": "1.0.0",
  "description": "An extension for github issues that adds a timer that logs to issue comments",
  "author": "ITSC Interns",
  "icons": {
    "48": "Icons/icon.png",
    "128": "Icons/icon.png"
  },
  "action": {
    "default_popup": "Popup/index.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "Popup/service_worker.js",
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [{
        "js": ["Popup/extension.js"],
        "css": ["Popup/extension.css"],
        "run_at": "document_end",
        "matches": ["https://github.com/*/*/issues/*"]
    }]
}