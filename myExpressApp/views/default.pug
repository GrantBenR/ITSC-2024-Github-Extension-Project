doctype html
html
    head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      meta(http-equiv='X-UA-Compatible' content='ie=edge')
      title= title
      style.
        *{
            font-family:Segoe UI, SegoeUI, Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: white;
        }
        body{
            background-color: #161b22;
        }
        header{
            display:inline-block;
            width: 100%;
            position: fixed;
            top: 0;
        }
        #content{
            padding:10em;
        }
        nav{
            
            display:inline-block;
            background-color: #000000;
            width: 100%;
        }
        ul{
            
            width: 100%;
        }
        .navLi{
            width: 20%;
            padding: 0.5em 0em 0.5em 0em;
            background-color: #57606a;
            list-style-type: none;
            display:block; 
            text-align: center;
            float:left;
        }
        .navLi:hover{
            border-bottom-width: 1px;
            border-bottom: solid;
            border-color: #fa7a18;
        }
        .navLi a{
            width: 100%;
           
            color: #FFFFFF;
            text-decoration:none;
        }
        #SiteHeader{
            text-align: center;
            background-color: #000000;
            color: #FFFFFF;
            padding: 0.5em;
        }
        #CurrentTab{
            background-color:#383c40;
        }
        canvas{
            margin: 3em 0em 3em 0em;
            background-color: #FFFFFF;
        }
        .referenceLink{
            color: white;
            font-size: 2em;
            width: 100%;
            padding: 1em 1em 1em 1em;
            display: inline-block;
            text-align:center;
            border: 1px solid;
            border-color: #57606a;
            border-radius: 0.5em;
            margin: 0.5em 0em 0.5em 0em;
            background-color: #252c36;
        }
        #referenceListHeader{
            width: 100%;
            text-align:center;
        }
        #referenceList{
            padding: 1em 1em 1em 1em;
        }
        .CanvasWrapper{
            background-color: #FFFFFF;
            padding:2em 2em 2em 2em;
            margin: 3em 20% 3em 20%;
            border-radius:3em;

        }
        footer{
            background-color:#000000;
            text-align:center;
            padding: 1em 1em 1em 1em;
            font-size:1em;
        }
        #Hidden{
          display:none;
        }
        #idhidden{
          display:none;
        }
        .recordHeader{
          background-color: #252c36;
          border: 1px solid;
          border-color: #57606a;
          border-radius: 0.5em;
          padding: 1em 1em 1em 1em;
        }
    body
      header
        h1#SiteHeader Visualization for GitHub Issues Timer Data
        nav
          ul
            li.navLi
              a(href="http://localhost:5220/views/main") Home
            li.navLi
              a(href="http://localhost:5220/views/users") Users
            li.navLi
              a(href="http://localhost:5220/views/issues") Issues
            li.navLi
              a(href="http://localhost:5220/views/timers") Timers
            li.navLi
              a(href="http://localhost:5220/views/timerperiods") Timer Periods
      block content
